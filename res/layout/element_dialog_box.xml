<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menuAuxiliar_dialogInput_titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/terciarioD"
        android:gravity="center">

        <TextView
            android:id="@+id/menuAuxiliar_dialogInput_taskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese los datos"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="25dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/menuAuxiliar_dialogInput_editTextUsuario"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/menuAuxiliar_dialogInput_titulo"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="14dp"
        android:hint="Usuario a agregar"
        style="@style/CustomEditText"/>
    <EditText
        android:id="@+id/menuAuxiliar_dialogInput_editTextContrasena"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/menuAuxiliar_dialogInput_editTextUsuario"
        android:hint="Contraseña del usuario"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        style="@style/CustomEditText"
        />
    <EditText
        android:id="@+id/menuAuxiliar_dialogInput_editTextContrasenaAuxiliar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Ingrese su contraseña"
        android:layout_below="@id/menuAuxiliar_dialogInput_editTextContrasena"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        style="@style/CustomEditText"
        />
    <LinearLayout
        android:id="@+id/menuAuxiliar_dialogInput_buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuAuxiliar_dialogInput_editTextContrasenaAuxiliar"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/menuAuxiliar_dialogInput_buttonAgregar"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/terciarioD"
            android:layout_margin="10dp"
            android:text="Agregar"
            android:layout_weight="2"/>
    </LinearLayout>

</RelativeLayout>