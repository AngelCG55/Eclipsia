<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuario.menuUsuario.MenuUsuarioActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_nombre_horizontal_b"
        app:layout_constraintDimensionRatio="h,2:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botoMenuUsuarioViaje"
        android:layout_width="290dp"
        android:layout_height="289dp"
        android:background="@drawable/circular_button_background"
        android:src="@drawable/icon_person_walking"
        app:layout_constraintBottom_toTopOf="@id/botoMenuUsuarioDatosUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.35" />

    <ImageButton
        android:id="@+id/botoMenuUsuarioDatosUsuario"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circular_button_background"
        android:src="@drawable/icon_person_vcard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
