<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/design_edittext</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    <style name="CustomTextView" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/design_edittext</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    <style name="SoloTexto">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúüñÁÉÍÓÚÜÑ</item>
    </style>

    <style name="colored_checkBox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/terciarioA</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

    <style name="CardContactoAuxiliarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_contactos</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="CardContactoAuxiliarIconPersonaStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_auxiliar_mano</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CardContactoAuxiliarNombreTextViewStyle" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardContactoAuxiliarNumeroTextViewStyle" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="CardContactoAuxiliarImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:src">@drawable/icon_telefono_auxiliar</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="CardMenuAuxiliarImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/icon_menu_auxiliar_masinfo</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardMenuAuxiliarIconPersonaStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_menu_auxiliar_persona</item>
        <item name="android:padding">8dp</item>
    </style>



</resources>